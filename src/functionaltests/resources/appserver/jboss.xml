<?xml version="1.0" encoding="UTF-8"?>
<jboss xmlns="http://www.jboss.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.jboss.com/xml/ns/javaee http://www.jboss.org/j2ee/schema/jboss_5_0.xsd"
	version="3.0">

	<enterprise-beans>
		<session>
			<ejb-name>TransactionTimeoutSessionBean</ejb-name>
			<jndi-name>cesecore/TransactionTimeoutSessionRemote</jndi-name>
			<exception-on-rollback>true</exception-on-rollback>
			<method-attributes>
				<method>
					<method-name>timeout</method-name>
					<transaction-timeout>3</transaction-timeout>
				</method>
			</method-attributes>
		</session>
	</enterprise-beans>
</jboss>
